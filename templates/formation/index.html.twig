{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block contenuPage %}
    <h1>Formation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomCourt</th>
                <th>NomLong</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.nomCourt }}</td>
                <td>{{ formation.nomLong }}</td>
                <td>
                    <a href="{{ path('formation_show', {'id': formation.id}) }}">Voir</a>
                    <a href="{{ path('formation_edit', {'id': formation.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'enregistrements trouvés/td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formation_new') }}">Créer un nouveau</a>
{% endblock %}
